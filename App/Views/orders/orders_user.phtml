<script>
    // Exportação de dados
    $('#label-data-inicio').hide();
    $('#input-data-inicio').hide();
    $('#label-data-fim').hide();
    $('#input-data-fim').hide();

    $("#select-periodo-export").change(function() {
        if (this.value == "Todo o período") {
            $('#label-data-inicio').hide();
            $('#input-data-inicio').hide();
            $('#label-data-fim').hide();
            $('#input-data-fim').hide();
        } else if (this.value == "Personalizado") {
            $('#label-data-inicio').show();
            $('#input-data-inicio').show();
            $('#label-data-fim').show();
            $('#input-data-fim').show();
        }
    });
</script>