            </div>
            <div class="modal-footer">
                <form action="/update_profile" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id_usuario" value="<?= $_SESSION['id']?>">
                    <input class="d-none" type="file" name="imagem" id="imagem" onchange="previewImagem()">			
                    <label class="btn btn-outline-info mr-1" for="imagem">Alterar foto</label>
                    <button type="submit" class="btn btn-info">Salvar foto</button>
                </form>		
            </div>
        </div>
    </div>
</div>	
<script>
    function previewImagem(){
        var imagem = document.querySelector('input[name=imagem]').files[0];
        var preview = document.querySelector('#imagem_usuario');
        
        var reader = new FileReader();
        
        reader.onloadend = function () {
            preview.src = reader.result;
        }
        
        if(imagem){
            reader.readAsDataURL(imagem);
        }
    }
</script>